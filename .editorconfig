# Editor configuration, see https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
max_line_length = 160

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.ts]
quote_type = single

[*.md]
trim_trailing_whitespace = false

[{package, bower}.json]
indent_style = space
indent_size = 2
